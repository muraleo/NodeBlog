<%include ./partials/header%>
<div class="ui main text container">
	<div class="ui huge header">REST Blog</div>
	<div class="ui top attached segment">
		<div class="ui divided items">
			<% blogs.forEach(function(e){ %>
				<div class="item">
					<div class="image">
						<img src="<%= e.image%>">
					</div>
					<div class="content">
						<a class="header" href="/blogs/<%= e._id%>"><%= e.title%></a>
						<div class="meta">
							<span><%= e.created.toDateString()%></span>
						</div>
						<div class="description">
							<p><%- e.body.substring(0,100)%>...</p>	
						</div>
						<div class="extra">
							<a class="ui floated basic violet button" href="/blogs/<%= e._id%>">
								Read More
								<i class="right chevron icon"></i>
							</a>
						</div>
					</div>
				</div>
			<% })%>
		</div>
	</div>
</div>

<%include ./partials/footer%>